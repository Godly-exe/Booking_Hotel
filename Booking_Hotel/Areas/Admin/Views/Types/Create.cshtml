@model Booking_Hotel.Models.data.type

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h2>Thêm mới khách sạn</h2>

@using (Html.BeginForm("Create", "types", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Khách sạn</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên khách sạn</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.type1, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.type1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá theo ngày</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price_day, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })
                @Html.ValidationMessageFor(model => model.price_day, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh</label>
            <div class="col-md-10">
                <input type="file" name="Image" id="Image" required>
                <br />
                <img id="preview" src="" width="150" height="100" class="hidden" />
                <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Thêm mới</span>
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
