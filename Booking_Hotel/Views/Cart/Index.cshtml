
@model List<Booking_Hotel.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đơn hàng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Thư viện jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Thư viện jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

</head>
<style>
    body {
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>

<body>
    @if (Model == null || Model.Count == 0)
    {
        <h2 class="text-light text-center" style="padding-top:50px">
           Đơn hàng của bạn đang rỗng!
        </h2>
    }
    else
    {
        <section class="h-100 gradient-custom">
            <div class="container py-5">
                <div class="row d-flex justify-content-center my-4">
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h5 class="mb-0">Số phòng: @Model.Count()</h5>
                            </div>
                            <div class="card-body">
                                <!-- Single item -->
                                @foreach (var item in Model)
                                {

                                    <div class="row">
                                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                            <!-- Image -->
                                            <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                                <img src="@item.image"
                                                     class="w-50" alt="Ảnh" />
                                                <a href="#!">
                                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                                </a>
                                            </div>
                                            <!-- Image -->
                                        </div>

                                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                            <!-- Data -->
                                            <p><strong>@item.name</strong></p>
                                            <a href="@Url.Action("XoaKhoiGio",new { SanPhamID = item.id_phong})" onclick="return confirm('Bạn có chắc muốn xóa đơn hàng này?');" class="btn btn-danger btn-lg"><i class="fas fa-trash"></i></a>
                                            <!-- Data -->
                                        </div>

                                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                          
                                            <p class="text-start text-md-center">
                                                <strong>@item.price.ToString("#,##0").Replace(',', '.') VNĐ</strong><small>/Ngày</small>
                                            </p>
                                            <!-- Price -->


                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                }                        <!-- Single item -->
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h5 class="mb-0">Thành tiền</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                        Tiền Phòng
                                        <span>@Model.Sum(m => m.TongTien).ToString("#,##0").Replace(',', '.') VNĐ</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        Phí VAT
                                        <span>FREE</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                        <div>
                                            <strong>Tổng cộng</strong>
                                            <strong>
                                                <p class="mb-0">(đã bao gồm VAT)</p>
                                            </strong>
                                        </div>
                                        <span><strong>@Model.Sum(m => m.TongTien).ToString("#,##0").Replace(',', '.') VNĐ</strong><small>Ngày</small></span>
                                    </li>
                                </ul>

                                <a class="btn btn-primary" href="@Url.Action("Checkout","Cart")">
                                    Xác nhận
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>
