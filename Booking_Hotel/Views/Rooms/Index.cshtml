
@{
    ViewBag.Title = "Index";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../content/images/room.png');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="~/Home">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span>Phòng <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Chọn phòng của bạn</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        @using (Html.BeginForm("Index", "Rooms", FormMethod.Get))
        {
            <div class="timkiemm">
                @Html.TextBox("Name", null, new { @placeholder = "Nhập tên...", @class = "timkiem" })
                @Html.DropDownList("Type", null, "All", new { @class = "luachon" })
                <input type="submit" class="btn btn-secondary py-3 px-4 " value="Tìm kiếm" />
            </div>
        }
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.image);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="#">@item.name</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@item.types.type1</span>
                                <p class="price ml-auto">@item.price <span>/Ngày</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="@Url.Action("AddCart", "Cart", new {id =  item.id_room})" class="btn btn-primary py-2 mr-1">Đặt Phòng</a> @Html.ActionLink("Chi tiết", "Details", new { idx = item.id_room }, new { @class = "btn btn-secondary py-2 ml-1" })</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

